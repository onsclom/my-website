  <script>
    import dayjs from "dayjs"

    const age = document.getElementById("age")
    const progress = document.getElementById("progress") as HTMLProgressElement
    function updateAge() {
      const birth = dayjs("1998-04-02")
      const ageNum = dayjs().diff(birth, "year", true)
      age!.innerText = dayjs().diff(birth, "year", true).toFixed(10)
      progress!.value = (ageNum / 80) * 1000
      requestAnimationFrame(updateAge)
    }
    updateAge()
  </script>
